    <body>
        <div class="bg-white">
            <div class="container">
                <div class="row justify-content-center align-items-center d-flex vh-100">
                    <div class="col-md-4 mx-auto">
                        <div class="devSocial-login py-4">
                            <div class="text-center mb-4">
                                <img  width="50px" src="/img/fav.png" alt=""/> 
                                <h5 class="font-weight-bold mt-3">Merahaba devSocial'e Hoşgeldiniz</h5>
                                <p class="text-muted">Oturum açmak için alttaki bilgileri doğru doldurduğunuzdan emin olunuz.</p>
                            </div>
                            <%  if(flashMessages )  {  %>
                                <%  if(flashMessages.success )  {  %>
                                    <div class="alert alert-secondary">
                                        <%= flashMessages.success %>    
                                    </div>
                                <%    } else if(flashMessages.error) {    %> 
        
                                    <div class="alert alert-secondary">
                                        <%=  flashMessages.error %>    
                                    </div>
                                <%   }   %>
                            <%    }%>
                            <form    method="POST" action="users/login"  >
                                <div class="form-group">
                                    <label class="mb-1">Email Adresiniz</label>
                                    <div class="position-relative icon-form-control">
                                        <i class="feather-user position-absolute"></i>
                                        <input name="email" type="email" class="form-control"/>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="mb-1">Şifreniz</label>
                                    <div class="position-relative icon-form-control">
                                        <i class="feather-unlock position-absolute"></i>
                                        <input name="password" type="password" class="form-control"/>
                                    </div>
                                </div>
                              
                                <button class="btn btn-primary btn-block text-uppercase" type="submit">
                                    Giriş Yap
                                </button>
                               
                                <div class="py-3 d-flex align-item-center">
                                    <a href="/forgot-password.html">Şifremi Unuttum</a>
                                    <span class="ml-auto">
                                        Üye değilmisin?
                                        <a class="font-weight-bold" href="/register">Yeni Kayıt Oluştur</a>
                                    </span>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>


        <style>
            .modal-header {
                background: #1f1f1f;
            }
            .modal-body {
                color: #1f1f1f;
            }

            .required:after {
                content: "*";
                color: red;
            }
        </style>
    </head>

    <body>

        <nav class="navbar navbar-expand navbar-dark bg-dark osahan-nav-top p-0">
            <div class="container">
                <a class="navbar-brand mr-2" href="/"><img src="/img/fav.png" alt="">
                </a>
                <form action="/search" method="POST" class="d-none d-sm-inline-block form-inline mr-auto my-2 my-md-0 mw-100 navbar-search">
                    <div class="input-group">
                        <input type="text" name="search" class="form-control shadow-none border-0" placeholder="Kişileri, işleri ve daha fazlasını arayın...">
                        <div class="input-group-append">
                            <button class="btn" type="button">
                                <i class="feather-search"></i>
                            </button>
                        </div>
                    </div>
                </form>
                <% if ( user.role == "preuser" ){%>   
                     <h5><%= user.name %> Hoşgeldin</h5> 

                <%   }%>
                <ul class="navbar-nav ml-auto d-flex align-items-center">

                    <% if ( page_name == "profile" ){%>

                        <li class="nav-item">
                            <a class="nav-link" href="/">
                                <i class="fa-solid fa-house mr-2  "> </i>
                                <span class="d-none d-lg-inline"> Anasayfaya Dön</span>
                            </a>
                        </li>

                    <% } else {%>

                            <li class="nav-item">
                                <a class="nav-link" href="/profile/<%= user._id %>">
                                    <i class="fa-regular fa-address-card mr-2 "> </i>
                                    <span class="d-none d-lg-inline">  Profili Görüntüle</span>
                                </a>
                            </li>

                    <%   }%>
                            
                   <% if ( page_name == "search" ){%>
                        <li class="nav-item">
                             <a class="nav-link" href="/">
                                 <i class="fa-solid fa-house mr-2 "> </i>
                                 <span class="d-none d-lg-inline">  Anasayfaya Dön</span>
                              </a>
                         </li>
                               
                    <%   }%>

                       
                    
                    <li class="nav-item"> 
                        <a class="nav-link" href="/users/<%= user._id %>?_method=DELETE"   onclick=" return  confirm('Silme işlemini onaylayın'  )"     > 
                            <i class="fa-solid fa-user-xmark mr-2 "></i>
                            <span class="d-none d-lg-inline">Kaydını Sil</span>
                        </a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" href="/users/logout">
                            <i class="feather-log-out mr-2"></i>
                            <span class="d-none d-lg-inline">Çıkış Yap</span>
                        </a>
                    </li>
                 
                  
                
 
                </ul>
            </div>
        </nav>
    </body>
</html>
